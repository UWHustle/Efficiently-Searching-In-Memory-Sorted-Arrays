FROM ubuntu:18.04

# update
RUN apt-get -y update
RUN DEBIAN_FRONTEND=noninteractive apt install -y tzdata
RUN apt-get -y install libomp-dev python3 python3-pandas git python3-pip python3-dev jupyter
RUN git clone https://github.com/UWHustle/Efficiently-Searching-In-Memory-Sorted-Arrays.git
WORKDIR ./Efficiently-Searching-In-Memory-Sorted-Arrays
RUN make
WORKDIR ./reproduce_experiments

EXPOSE 8899
ADD internal_docker_without_gui_DONT_USE.sh run_without_gui.sh
ENTRYPOINT /bin/bash run_without_gui.sh

